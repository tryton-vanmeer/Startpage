{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "config.schema.json",
    "title": "Startpage Config",
    "descripton": "Configuration for Startpage",
    "type": "object",
    "properties": {
        "Apps": {
            "description": "List of websites to link to.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "description": "Label to display under the AppIcon.",
                        "type": "string"
                    },
                    "icon": {
                        "description": "Icon to use in the AppIcon. See SVGIcon.tsx",
                        "type": "string"
                    },
                    "url": {
                        "description": "URL that the AppIcon links to.",
                        "type": "string"
                    },
                    "color": {
                        "description": "The AppIcons backgrond colour.",
                        "type": "string",
                        "pattern": "^#([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$"
                    }
                },
                "required": ["label", "icon", "url"]
            },
            "minItems": 1
        },
        "Dock": {
            "description": "List of AppIcons to 'pin' to the Dock. The corresponding 'Apps[.label]' object must exists.",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}