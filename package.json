{
  "name": "Startpage",
  "version": "1.0.0",
  "description": "Custom Startpage",
  "main": "index.html",
  "repository": "git@github.com:tryton-vanmeer/Startpage.git",
  "author": "Tryton Van Meer <trytonvanmeer@gmail.com>",
  "license": "MIT",
  "watch": {
    "build:html": "src/index.html",
    "build:css": {
        "patterns": ["src"],
        "extensions": "scss"
    }
  },
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build:html": "cp src/index.html build/",
    "build:css": "node-sass src/sass/startpage.scss -q build/style.css",
    "build": "npm-run-all --parallel build:*",
    "watch": "npm-watch",
    "serve": "cd build/ && live-server",
    "dev": "npm-run-all --parallel watch serve",
    "start": "npm-run-all clean build dev"
  },
  "devDependencies": {
    "live-server": "^1.2.0",
    "node-sass": "^4.9.4",
    "nord": "^0.2.1",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.4.0",
    "spectre.css": "^0.5.3"
  }
}
